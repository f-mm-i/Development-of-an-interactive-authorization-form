{
  "name": "interactive-auth-form",
  "version": "1.0.0",
  "description": "Интерактивная форма авторизации с современной инфраструктурой разработки",
  "main": "src/main.ts",
  "type": "module",
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=9.2.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "npm run dev",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,js,html",
    "lint:fix": "eslint . --ext ts,js,html --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "authorization",
    "form",
    "typescript",
    "vite",
    "frontend"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "author": "Разработчик",
  "license": "MIT"
}
